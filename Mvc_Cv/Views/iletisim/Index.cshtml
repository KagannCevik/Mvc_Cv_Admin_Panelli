@using Mvc_Cv.Models.Entity
@model List<TBLILETISIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}

<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                    <!-- timeline time label -->
                                    <div class="time-label">
                                        <span class="bg-info">
                                            @(((DateTime)item.TARIH).ToString("dd-MMM-yyy"))
                                        </span>
                                    </div>
                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>
                                        <div class="timeline-item">
                                            <span class="time"><i class="far fa-clock"></i> @item.MAIL</span>
                                            <h3 class="timeline-header"><a href="#">@item.ADSOYAD</a>  @item.KONU</h3>
                                            <div class="timeline-body">
                                               @item.MESAJ
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
</body>
</html>
