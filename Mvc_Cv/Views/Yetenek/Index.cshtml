@using Mvc_Cv.Models.Entity
@model List<TBLYETENEKLERIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}
@{string renk = "";}
@{ string labelrenk = ""; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek" class="btn btn-outline-success">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.ORAN >= 0 && item.ORAN <= 50)
                                            {
                                                renk = "progress - bar bg-danger";
                                                labelrenk = "badge bg-danger";
                                            }
                                            if (item.ORAN >= 51 && item.ORAN <= 70)
                                            {
                                                renk = "progress - bar bg-warning";
                                                labelrenk = "badge bg-warning";
                                            }
                                            if (item.ORAN >= 71 && item.ORAN <= 84)
                                            {
                                                renk = "progress - bar bg-primary";
                                                labelrenk = "badge bg-primary";
                                            }
                                            if (item.ORAN >= 84 && item.ORAN <= 100)
                                            {
                                                renk = "progress - bar bg-success";
                                                labelrenk = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.YETENEK</td>

                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.ORAN%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@item.ORAN% </span></td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                    </td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>