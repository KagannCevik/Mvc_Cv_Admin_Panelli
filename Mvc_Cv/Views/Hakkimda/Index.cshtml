@using Mvc_Cv.Models.Entity;
@model List<TBLHAKKIMDA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}

<br />
<h2>Profil Düzenleme Sayfası</h2>
<form method="post">
    @foreach (var item in Model)
    {

        <label>Ad</label>
        <input type="text" name="AD" class="form-control" value="@item.AD" />
        <br />
        <label>Soyad</label>
        <input type="text" name="SOYAD" class="form-control" value="@item.SOYAD" />
        <br />
        <label>Adres</label>
        <input type="text" name="ADRES" class="form-control" value="@item.ADRES" />
        <br />
        <label>Telofon</label>
        <input type="text" name="TELOFON" class="form-control" value="@item.TELOFON" />
        <br />
        <label>Mail</label>
        <input type="text" name="MAIL" class="form-control" value="@item.MAIL" />
        <br />
        <label>Resim</label>
        <input type="text" name="RESIM" class="form-control" value="@item.RESIM" />
        <br />
        <label>Açıklama</label>
        <textarea name="ACIKLAMA" rows="4" class="form-control">@item.ACIKLAMA</textarea>
        <br />
        <button class="btn btn-info">Kaydet</button>
    }
</form>

